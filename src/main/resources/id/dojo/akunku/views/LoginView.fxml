<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.dojo.akunku.controllers.LoginController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="292.0" styleClass="red-background" stylesheets="@style.css">
